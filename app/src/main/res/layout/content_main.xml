<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#A79999"
        android:id="@+id/buttonHistory"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CFBFBF"
        android:id="@+id/buttonAnswer"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="AC"
            android:textSize="20dp"
            android:id="@+id/buttonAC"
            android:onClick="memoryButtonClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="M+"
            android:id="@+id/buttonMplus"
            android:onClick="memoryButtonClicked"
            android:textSize="20dp"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="M-"
            android:id="@+id/buttonMminus"
            android:onClick="memoryButtonClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@android:color/holo_green_dark"
            android:text="MR"
            android:id="@+id/buttonMR"
            android:onClick="memoryButtonClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@android:color/holo_green_dark"
            android:text="MC"
            android:id="@+id/buttonMC"
            android:onClick="memoryButtonClicked"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="7"
            android:textSize="20dp"
            android:id="@+id/button7"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="8"
            android:id="@+id/button8"
            android:textSize="20dp"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="9"
            android:id="@+id/button9"
            android:textSize="20dp"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@android:color/holo_orange_dark"
            android:text="%"
            android:id="@+id/buttonper"
            android:onClick="operationPressed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="4"
            android:textSize="20dp"
            android:id="@+id/button4"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="5"
            android:textSize="20dp"
            android:id="@+id/button5"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="6"
            android:textSize="20dp"
            android:id="@+id/button6"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="&#xf7;"
            android:textSize="20dp"
            android:id="@+id/buttondiv"
            android:onClick="operationPressed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="1"
            android:textSize="20dp"
            android:id="@+id/button1"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="2"
            android:textSize="20dp"
            android:id="@+id/button2"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="3"
            android:textSize="20dp"
            android:id="@+id/button3"
            android:onClick="digit_pressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="&#215;"
            android:textSize="20dp"
            android:id="@+id/buttonmul"
            android:onClick="operationPressed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="0"
            android:textSize="20dp"
            android:id="@+id/button0"
            android:onClick="digit_pressed"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="."
            android:textSize="40dp"
            android:id="@+id/buttondot"
            android:onClick="dotPressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@android:color/holo_orange_dark"
            android:text="&#8730;"
            android:id="@+id/buttonsqrt"
            android:onClick="operationPressed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@android:color/holo_orange_dark"
            android:text="&#8722;"
            android:id="@+id/buttonsub"
            android:onClick="operationPressed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="="
            android:textSize="20dp"
            android:id="@+id/buttonequal"
            android:onClick="equalsPressed"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="+"
            android:textSize="20dp"
            android:id="@+id/buttonadd"
            android:onClick="operationPressed"/>



    </LinearLayout>

</LinearLayout>